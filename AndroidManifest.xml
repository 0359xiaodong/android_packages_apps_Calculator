<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android2.calculator3"
    android:versionCode="30"
    android:versionName="2.4"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17"/>

    <application android:label="@string/app_name" android:icon="@mipmap/ic_launcher_calculator" android:allowBackup="true">
        <activity android:name=".Calculator"
                  android:theme="@android:style/Theme.Holo.NoActionBar"
                  android:windowSoftInputMode="stateAlwaysHidden"
                  android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.APP_CALCULATOR" />
            </intent-filter>
        </activity>
        <activity android:name=".Preferences" android:label="@string/settings" />
        <receiver android:name=".CalculatorWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name=".CalculatorWidget.DIGIT_0" />
                <action android:name=".CalculatorWidget.DIGIT_1" />
                <action android:name=".CalculatorWidget.DIGIT_2" />
                <action android:name=".CalculatorWidget.DIGIT_3" />
                <action android:name=".CalculatorWidget.DIGIT_4" />
                <action android:name=".CalculatorWidget.DIGIT_5" />
                <action android:name=".CalculatorWidget.DIGIT_6" />
                <action android:name=".CalculatorWidget.DIGIT_7" />
                <action android:name=".CalculatorWidget.DIGIT_8" />
                <action android:name=".CalculatorWidget.DIGIT_9" />
                <action android:name=".CalculatorWidget.DOT" />
                <action android:name=".CalculatorWidget.DIV" />
                <action android:name=".CalculatorWidget.MUL" />
                <action android:name=".CalculatorWidget.MINUS" />
                <action android:name=".CalculatorWidget.PLUS" />
                <action android:name=".CalculatorWidget.EQUALS" />
                <action android:name=".CalculatorWidget.CLR" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/calculator_widget_info" />
        </receiver>
    </application>
</manifest> 
